@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <a class="btn btn-success zbttitle" asp-area=""  asp-controller="Profile" asp-action="" >Hello @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-danger zbttitle" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="btn btn-success zbttitle" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
}
</ul>
