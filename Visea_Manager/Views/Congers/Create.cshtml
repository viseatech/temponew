@model Visea_Expense_Manager.Models.Conger

@{
    ViewData["Title"] = "Create Absence";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js" defer></script>

<h1>Absence</h1>

<h4>Créer une demande d'absence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Date de debut </label>
                <input type="date" asp-for="Date_Debut" class="form-control" />
                <span asp-validation-for="Date_Debut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Commence le Matin ou le Midi ? </label>
                <select asp-for="Demijourne_Debut" class="form-control">
                    <option value="1">Matin</option>
                    <option value="2">Midi</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Date de fin</label>
                <input type="date" asp-for="Date_Fin" class="form-control" />
                <span asp-validation-for="Date_Fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Fini le Midi ou le Soire ? </label>
                <select asp-for="Demijourne_Fin" class="form-control">
                    <option value="3">Soire</option>
                    <option value="2">Midi</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option asp-for="Type" value="">--choisir une option--</option>
                    <option asp-for="Type" value="Congés payés">Congés payés</option>
                    <option asp-for="Type" value="Congés C.S.S">Congés C.S.S</option>
                    <option asp-for="Type" value="Congés Exceptionnel">Congés Exceptionnel</option>
                    <option asp-for="Type" value="Congés Maternité">Congés Maternité</option>
                    <option asp-for="Type" value="Congés Paternité">Congés Paternité</option>
                    <option asp-for="Type" value="Maladie">Maladie</option>
                    <option asp-for="Type" value="RTT">RTT</option>
                    <option asp-for="Type" value="Récuperation">Récuperation</option>
                    <option asp-for="Type" value="Autres">Autres</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label"> Responsable </label>
                <select class="js-example-basic-multiple" name="responsable" multiple="multiple" style="width:100%">
                    <option value="sbelgourch@viseaconsulting.com">Sabine BELGOURCH</option>
                    <option value="hprestigio@viseaconsulting.com">Hugues PRESTIGIO</option>
                    <option value="ccarre-homage@viseaconsulting.com">Catherine Carre-Homage</option>
                    <option value="selvarangame@viseaconsulting.com">SELVA SELVARANGAME</option>
                    <option value="ptozza@viseaconsulting.com">Pierre TOZZA</option>
                    <option value="naid@viseaconsulting.com">Nadir AID</option>
                    <option value="garrondeau@viseaconsulting.com">Guillaume ARRONDEAU</option>
                    <option value="fdupeu@viseaconsulting.com">Fabrice DUPEU</option>
                    <option value="fleclerc@viseaconsulting.com">Fabien LECLERC</option>
                    <option value="zlayadi@viseaconsulting.com">Ziane Layadi</option>
                </select>
            </div>
            <div class="form-group">
                <label  class="control-label"> Comentaire </label>
                <textarea asp-for="commente" class="form-control"></textarea>
                <span asp-validation-for="commente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Justificatif (arret maladie etc...)</label>
                <input type="file" name="listfile" multiple />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour a la liste</a>
</div>

<script>
    $(document).ready(function () {
        $('.js-example-basic-multiple').select2();
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
