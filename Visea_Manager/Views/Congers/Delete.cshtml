@model Visea_Expense_Manager.Models.Conger

@{
    ViewData["Title"] = "Delete Absence";
}

<h1>Delete</h1>

<h3>Etes-vous sur de vouloir supprimer cet element?</h3>
<div>
    <h4>Absence</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date de debut
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_Debut)
        </dd>
        <dt class="col-sm-2">
            Matin ou Midi ?
        </dt>
        @if (Model.Demijourne_Debut == 1)
        {
            <dd class="col-sm-10">
                Matin
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Midi
            </dd>
        }
        <dt class="col-sm-2">
             Date de fin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_Fin)
        </dd>
        <dt class="col-sm-2">
            Midi ou soir ?
        </dt>
        @if (Model.Demijourne_Fin == 2)
        {
            <dd class="col-sm-10">
                Midi
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Soir
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Utilisateur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt class="col-sm-2">
            Etat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour a la liste</a>
    </form>
</div>
