<table id="listeday" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item1)
        {
            @if (true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User)
                    </td>
                    @if (item.State == "En attente")
                    {
                        <td style="background-color:orange;">
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                    }
                    else if (item.State == "Valider")
                    {
                        <td style="background-color:limegreen;">
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                    }
                    else if (item.State == "Rejeter")
                    {
                        <td style="background-color:red;">
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                    }
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="zblock" style="margin:100px"></div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/js/jquery.dataTables.min.js" defer></script>
<script src="~/js/dataTables.bootstrap4.min.js" defer></script>

<script src="~/js/moment.min.js" defer></script>
<script src="~/js/datetime-moment.js" defer></script>
<script>
    $(document).ready(function () {
        $.fn.dataTable.moment('DD/MM/YYYY HH:mm');
        var table = $('#listeday').DataTable({
            responsive: true,
            select: true,
            dom: 'lftipB',

            buttons: [
                'copy', 'csv', 'excel', 'print'
            ],
            initComplete: function () {
                var btns = $('.dt-button');
                btns.addClass('btn btn-primary zbtn');
                //btns.removeClass('dt-button');

            }
        });
    });
</script>