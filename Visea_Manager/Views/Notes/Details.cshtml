@model Tuple<Visea_Expense_Manager.Models.Note, IEnumerable<Visea_Expense_Manager.Models.Zfile>>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(tuple => tuple.Item1.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(tuple => tuple.Item1.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(tuple => tuple.Item1.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(tuple => tuple.Item1.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(tuple => tuple.Item1.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(tuple => tuple.Item1.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(tuple => tuple.Item1.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(tuple => tuple.Item1.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(tuple => tuple.Item1.commente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(tuple => tuple.Item1.commente)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Item1.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@foreach (var item in Model.Item2)
{
    @if (Model.Item1.Id == item.NoteId)
    {
        <p>@item.path</p>
        <img src="@item.path" asp-append-version="true" width="100%" height="auto" />
    }
}